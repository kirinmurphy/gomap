{
  "scripts": {
    "build": "vite build && npm run build:css",
    "build:css": "npx postcss src/styles/tailwind.css -o src/templates/dist/output.css",
    "watch:css": "npx postcss src/styles/tailwind.css -o src/templates/dist/output.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"vite\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.8",
    "vite": "^5.4.0"
  },
  "resolutions": {
    "strip-ansi": "6.0.0"
  },
  "dependencies": {
    "htmx.org": "^1.9.12",
    "leaflet": "^1.9.4"
  }
}

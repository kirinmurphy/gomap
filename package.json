{
  "scripts": {
    "build": "yarn run build:css",
    "build:css": "npx postcss src/styles/tailwind.css -o src/templates/css/output.css",
    "watch:css": "npx postcss src/styles/tailwind.css -o src/templates/css/output.css --watch",
    "start": "browser-sync start --proxy localhost:8080 --files 'src/templates/**/*.{html,js,css}' --no-open --no-notify",
    "dev": "concurrently \"npm run watch:css\" \"npm run start\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.2",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.8"
  },
  "resolutions": {
    "strip-ansi": "6.0.0"
  }
}
